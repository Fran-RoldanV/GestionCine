<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" style="-fx-background-color: #393E46; -fx-padding: 10;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.gestioncine.gestioncine.controllers.MovieController">
    <VBox alignment="TOP_LEFT" spacing="30" style="-fx-background-color: #393E46; -fx-padding: 20;">
        <VBox alignment="TOP_LEFT" spacing="20">
            <Label text="Películas para mayores de 18" style="-fx-text-fill: #EEEEEE; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <HBox fx:id="mayor18" spacing="10" alignment="TOP_LEFT" style="-fx-background-color: #50555C; -fx-padding: 10; -fx-background-radius: 10; -fx-pref-height: 240;">
                <ImageView fitHeight="240" fitWidth="160" preserveRatio="true" />
                <ImageView fitHeight="240" fitWidth="160" preserveRatio="true" />
                <ImageView fitHeight="240" fitWidth="160" preserveRatio="true" />
                <ImageView fitHeight="240" fitWidth="160" preserveRatio="true" />
            </HBox>
        </VBox>
        <VBox alignment="TOP_LEFT" spacing="20">
            <Label text="Películas para menores de 18" style="-fx-text-fill: #EEEEEE; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <HBox fx:id="menor18" spacing="10" alignment="TOP_LEFT" style="-fx-background-color: #50555C; -fx-padding: 10; -fx-background-radius: 10; -fx-pref-height: 240;">
                <ImageView fitHeight="240" fitWidth="160" preserveRatio="true" />
                <ImageView fitHeight="240" fitWidth="160" preserveRatio="true" />
                <ImageView fitHeight="240" fitWidth="160" preserveRatio="true" />
                <ImageView fitHeight="240" fitWidth="160" preserveRatio="true" />
            </HBox>
        </VBox>
        <VBox alignment="TOP_LEFT" spacing="20">
            <Label text="Películas para niños" style="-fx-text-fill: #EEEEEE; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <HBox fx:id="kids" spacing="10" alignment="TOP_LEFT" style="-fx-background-color: #50555C; -fx-padding: 10; -fx-background-radius: 10; -fx-pref-height: 240;">
                <ImageView fitHeight="240" fitWidth="160" preserveRatio="true" />
                <ImageView fitHeight="240" fitWidth="160" preserveRatio="true" />
                <ImageView fitHeight="240" fitWidth="160" preserveRatio="true" />
                <ImageView fitHeight="240" fitWidth="160" preserveRatio="true" />
            </HBox>
        </VBox>
    </VBox>
</ScrollPane>

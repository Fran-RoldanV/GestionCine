<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.gestioncine.gestioncine.controllers.LoginController" spacing="20" alignment="CENTER" style="-fx-background-color: #393E46; -fx-padding: 40px; -fx-spacing: 20px;">
    <ImageView fx:id="imagenLogo" fitHeight="200" fitWidth="200" preserveRatio="true">
        <image>
            <Image url="@../resources/img/icon.png" />
        </image>
    </ImageView>
    <Label text="Iniciar Sesión" style="-fx-font-size: 28px; -fx-text-fill: #EEEEEE; -fx-font-weight: bold;" />
    <Label text="Por favor, ingresa tus credenciales." style="-fx-font-size: 16px; -fx-text-fill: #EEEEEE;" />
    <TextField fx:id="campoUser" promptText="Correo Electrónico" style="-fx-font-size: 14px; -fx-prompt-text-fill: #919191; -fx-text-alignment: center; -fx-text-fill: #000000; -fx-background-color: #FFFFFF; -fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 10; -fx-max-width: 600px;" />
    <PasswordField fx:id="campoPassword" promptText="Contraseña" style="-fx-font-size: 14px; -fx-prompt-text-fill: #919191; -fx-text-alignment: center; -fx-text-fill: #000000; -fx-background-color: #FFFFFF; -fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 10; -fx-max-width: 600px;" />
    <Hyperlink fx:id="textoOlvidastePassword" text="¿Olvidaste tu contraseña?" style="-fx-text-fill: #00ADB5; -fx-font-size: 14px;" />
    <Button fx:id="botonSiguiente" text="Siguiente" onAction="#handleLogin" style="-fx-background-color: #00ADB5; -fx-text-fill: #FFFFFF; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-border-radius: 20; -fx-max-width: 600px;" />
    <Label fx:id="responseText" style="-fx-text-fill: #FF0000; -fx-max-width: 600px;" />
</VBox>

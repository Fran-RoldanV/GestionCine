<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="es.gestioncine.gestioncine.controllers.LoginController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #393E46;">

    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20px;">
            <ImageView fx:id="imagenLogo" fitWidth="200" fitHeight="200">
                <image>
                    <Image url="@../resources/img/icon.png" />
                </image>
            </ImageView>

            <Label fx:id="textoIniciarSesion" text="Iniciar Sesión" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #EEEEEE;" />

            <Label fx:id="textoSubInicioSesion" text="Por favor, ingresa tus credenciales." style="-fx-font-size: 16px; -fx-text-fill: #EEEEEE;" />

            <TextField fx:id="campoUser" promptText="Correo electrónico" style="-fx-font-size: 14px; -fx-text-fill: #EEEEEE; -fx-prompt-text-fill: #919191; -fx-min-height: 40px; -fx-background-radius: 20px;" />

            <PasswordField fx:id="campoPassword" promptText="Contraseña" style="-fx-font-size: 14px; -fx-text-fill: #EEEEEE; -fx-prompt-text-fill: #919191; -fx-min-height: 40px; -fx-background-radius: 20px;" />

            <Hyperlink fx:id="textoOlvidastePassword" text="¿Olvidaste tu contraseña?" style="-fx-font-size: 14px; -fx-text-fill: #EEEEEE;" />

            <Button fx:id="botonSiguiente" text="Siguiente" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #00ADB5; -fx-text-fill: #FFFFFF;" />
        </VBox>
    </center>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="800" spacing="10" style="-fx-background-color: #393E46; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.gestioncine.gestioncine.controllers.LoginController">

    <ImageView fx:id="imagenLogo" fitHeight="200" fitWidth="200">
        <image>
            <Image url="@../resources/img/icon.png" />
        </image>
    </ImageView>

    <Label fx:id="textoIniciarSesion" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #EEEEEE;" text="Iniciar Sesión" />

    <Label fx:id="textoSubInicioSesion" style="-fx-font-size: 16px; -fx-text-fill: #EEEEEE;" text="Por favor, ingresa tus credenciales." />

    <TextField fx:id="campoUser" prefHeight="40.0" prefWidth="760.0" promptText="Correo electrónico" style="-fx-font-size: 14px; -fx-prompt-text-fill: #919191; -fx-min-height: 40px; -fx-background-radius: 20px;" />

    <PasswordField fx:id="campoPassword" prefHeight="40.0" prefWidth="692.0" promptText="Contraseña" style="-fx-font-size: 14px; -fx-prompt-text-fill: #919191; -fx-min-height: 40px; -fx-background-radius: 20px;" />

    <Hyperlink fx:id="textoOlvidastePassword" style="-fx-font-size: 14px; -fx-text-fill: #EEEEEE;" text="¿Olvidaste tu contraseña?" />

    <Button fx:id="botonSiguiente" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #00ADB5; -fx-text-fill: #FFFFFF; -fx-background-radius: 20px;" text="Siguiente" />
    
    <Label id="responseText" fx:id="responseText" textFill="#e83b49">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Label>

</VBox>

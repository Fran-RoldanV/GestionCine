<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<StackPane style="-fx-background-color: #393E46;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.gestioncine.gestioncine.controllers.MovieDataController" alignment="CENTER">
    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40px 60px 60px 60px;">
        <Label style="-fx-text-fill: #EEEEEE; -fx-font-size: 26px; -fx-font-weight: bold;" text="Datos de la Película" />

        <HBox alignment="CENTER" spacing="40">
            <VBox alignment="CENTER" spacing="10">
                <ImageView fx:id="peliculaImageView" fitHeight="450" fitWidth="300" preserveRatio="true" />
                <Button fx:id="botonReservar" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #00ADB5; -fx-text-fill: #EEEEEE; -fx-font-size: 18px; -fx-font-weight: bold;" text="Reservar Ahora" />
            </VBox>

            <VBox spacing="5" alignment="TOP_LEFT">
                <HBox spacing="10">
                    <Label style="-fx-text-fill: #EEEEEE; -fx-font-weight: bold;" text="Título:" />
                    <Label fx:id="tituloLabel" style="-fx-text-fill: #EEEEEE;" />
                </HBox>
                <HBox spacing="10">
                    <Label style="-fx-text-fill: #EEEEEE; -fx-font-weight: bold;" text="Género:" />
                    <Label fx:id="generoLabel" style="-fx-text-fill: #EEEEEE;" />
                </HBox>
                <HBox spacing="10">
                    <Label style="-fx-text-fill: #EEEEEE; -fx-font-weight: bold;" text="Director:" />
                    <Label fx:id="directorLabel" style="-fx-text-fill: #EEEEEE;" />
                </HBox>
                <HBox spacing="10">
                    <Label style="-fx-text-fill: #EEEEEE; -fx-font-weight: bold;" text="Duración:" />
                    <Label fx:id="duracionLabel" style="-fx-text-fill: #EEEEEE;" />
                </HBox>
                <HBox spacing="10">
                    <Label style="-fx-text-fill: #EEEEEE; -fx-font-weight: bold;" text="Clasificación:" />
                    <Label fx:id="clasificacionLabel" style="-fx-text-fill: #EEEEEE;" />
                </HBox>
                <VBox>
                    <Label style="-fx-text-fill: #EEEEEE; -fx-font-weight: bold;" text="Descripción:" />
                    <Label fx:id="descripcionLabel" prefHeight="254.0" prefWidth="400" style="-fx-text-fill: #EEEEEE;" wrapText="true" />
                </VBox>
            </VBox>
        </HBox>
    </VBox>
</StackPane>

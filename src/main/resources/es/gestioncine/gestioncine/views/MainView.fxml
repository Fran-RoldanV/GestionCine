<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="es.gestioncine.gestioncine.controllers.MainController"
            onMouseClicked="#closeSideMenu">


  <top>
    <HBox style="-fx-background-color: #6A1B9A; -fx-padding: 10;">
      <Button text="Menu" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#toggleSideMenu"/>
    </HBox>
  </top>

  <left>
    <VBox fx:id="sideMenu" style="-fx-background-color: #C5CAE9;">
      <fx:include source="SideMenu.fxml"/>
    </VBox>
  </left>

  <center>
    <StackPane fx:id="contentPane"/>
  </center>

</BorderPane>
